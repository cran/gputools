EXT := cu 

OBJS := rinterface.o mi.o sort.o granger.o qrdecomp.o correlation.o hcluster.o distance.o matmult.o lsfit.o cuseful.o

OBJS13 := @OBJS13@ 

CULA_OBJS := @CULA_OBJS@
CULA_INCS := -I@CULA_HOME@/include

#compiler/preprocessor options
INCS := -I@CUDA_HOME@/include
PARAMS := @EMULATION@ -Xcompiler "@R_INCLUDE@ @CPICFLAGS@"
PARAMS13 := @DEVICEOPTS@

#linker options
LD_PARAMS := -Xlinker "@R_LIB@ @RPATHFLAG@"
LIBS :=  @LIBS@

TARGETS := gputools.so

CC := @CUDA_HOME@/bin/nvcc

all: $(TARGETS) 

$(TARGETS): $(OBJS13) $(CULA_OBJS) $(OBJS)
	$(CC) -shared $(LD_PARAMS) $(LIBS) $(OBJS13) $(CULA_OBJS) $(OBJS) -o $@

$(OBJS): %.o: %.$(EXT)
	$(CC) -c $(INCS) $(PARAMS) $^ -o $@

$(OBJS13): %.o: %.$(EXT)
	$(CC) -c $(INCS) $(PARAMS13) $(PARAMS) $^ -o $@

$(CULA_OBJS): %.o: %.c
	$(CC) -c $(INCS) $(CULA_INCS) $(PARAMS) $^ -o $@

clean:
	rm -rf *o

.PHONY: all clean
